{{> navbar}}

<section class="hero hero-bg d-flex justify-content-center align-items-center">

    <div class="container">

        <div class="row">

            <div class="container">

                <div class="d-flex justify-content-center h-120">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-white text-center card-title">Recuperar Contrase単a</h3>
                        </div>
                        <div class="card-header">

                            {{#if mensaje}}

                            <h3 style="color:rgb(181, 231, 246)">{{mensaje}} </h3>
                            
                            {{/if}}
                        </div>
                        <div class="card-header">
							{{# if errors}}
							{{# each errors}}
							<div class="error"> {{ this.msg}}</div>
							{{/each}}
							{{/if}}
						</div>


                        <div class="card-body">
                            <form action="/recuperarFinal" method="post">

                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                                    </div>
                                    <input type="number" name="token" id="token" class="form-control"
                                        placeholder="Codigo de Recuperacion"  value="{{inputData.token}}">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                                    </div>
                                    <input type="password" name="password" id="password" class="form-control"
                                        placeholder="Nueva Contrase単a"  value="{{inputData.password}}">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                                    </div>
                                    <input type="password" name="password2" id="password2" class="form-control"
                                        placeholder="Confirmar Contrase単a"  value="{{inputData.password2}}">
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn float-right btn-warning ">Recuperar
                                        Contrase単a</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>